@using BaGetter.Web.Extensions
@using BaGetter.Web.Helper
@using System.Linq
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Options

@inject IOptions<StatisticsOptions> StatisticsOptions
@inject ApplicationVersion Version
@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<BaGetter.Web.SharedResource> Localizer

@{
    var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
    var languageOptions = new (string Culture, string Key, string Flag)[]
    {
        ("en-US", "LanguageName_en-US", "üá∫üá∏"),
        ("is-IS", "LanguageName_is-IS", "üáÆüá∏"),
        ("da-DK", "LanguageName_da-DK", "üá©üá∞"),
        ("sv-SE", "LanguageName_sv-SE", "üá∏üá™"),
        ("nb-NO", "LanguageName_nb-NO", "üá≥üá¥"),
        ("pl-PL", "LanguageName_pl-PL", "üáµüá±"),
        ("fi-FI", "LanguageName_fi-FI", "üá´üáÆ"),
        ("es-ES", "LanguageName_es-ES", "üá™üá∏"),
        ("pt-PT", "LanguageName_pt-PT", "üáµüáπ"),
        ("it-IT", "LanguageName_it-IT", "üáÆüáπ"),
        ("zh-CN", "LanguageName_zh-CN", "üá®üá≥"),
        ("fr-FR", "LanguageName_fr-FR", "üá´üá∑"),
    };

    string BuildCultureLink(string culture)
    {
        var path = Context.Request.Path.HasValue ? Context.Request.Path.Value : "/";
        var query = Context.Request.Query
            .ToDictionary(pair => pair.Key, pair => pair.Value.ToString(), StringComparer.OrdinalIgnoreCase);

        query["culture"] = culture;
        query["ui-culture"] = culture;

        return QueryHelpers.AddQueryString(path ?? "/", query);
    }

    string BuildAutoCultureLink()
    {
        var path = Context.Request.Path.HasValue ? Context.Request.Path.Value : "/";
        var query = Context.Request.Query
            .ToDictionary(pair => pair.Key, pair => pair.Value.ToString(), StringComparer.OrdinalIgnoreCase);

        query.Remove("culture");
        query.Remove("ui-culture");
        query["clearCulture"] = "1";

        return QueryHelpers.AddQueryString(path ?? "/", query);
    }
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="BaGet">
    <meta name="author" content="@Version.Authors">
    @Html.AddReleaseMetaTags()

    <link rel="shortcut icon" href="~/_content/BaGetter.Web/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/_content/BaGetter.Web/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/_content/BaGetter.Web/lib/office-ui-fabric-core/dist/css/fabric.min.css" />
    <link rel="stylesheet" href="~/_content/BaGetter.Web/css/site.css" asp-append-version="true" />

    <title>@ViewData["Title"] - BaGetter</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse" role="navigation">
            <div class="container">
                <div class="row">
                    <div id="navbar" class="col-sm-12">
                        <a class="navbar-brand" asp-area="" asp-page="/Index">BaGetter</a>
                        <ul class="nav navbar-nav" role="tablist">
                            <li role="presentation"><a asp-area="" asp-page="/Index" role="tab" nav-link><span>@Localizer["Packages"]</span></a></li>
                            <li role="presentation"><a asp-area="" asp-page="/Upload" role="tab" nav-link><span>@Localizer["Upload"]</span></a></li>
                            @if (StatisticsOptions.Value.EnableStatisticsPage)
                            {
                                <li role="presentation"><a asp-area="" asp-page="/Statistics" role="tab" nav-link><span>@Localizer["Statistics"]</span></a></li>
                            }
                            <li role="presentation">
                                <a role="tab" href="https://www.bagetter.com/docs" target="_blank" rel="noopener noreferrer">
                                    <span>@Localizer["Documentation"]</span>
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    @Localizer["Language"] <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    @foreach (var option in languageOptions)
                                    {
                                        <li class="@(string.Equals(currentCulture, option.Culture, StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                                            <a href="@BuildCultureLink(option.Culture)">
                                                <span class="language-flag" aria-hidden="true">@option.Flag</span>
                                                @Localizer[option.Key]
                                            </a>
                                        </li>
                                    }
                                    <li role="separator" class="divider"></li>
                                    <li>
                                        <a href="@BuildAutoCultureLink()">
                                            <span class="language-flag" aria-hidden="true">üåê</span>
                                            @Localizer["LanguageAuto"]
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container search-container">
                <div class="row">
                    <form class="col-sm-12" action="@Url.Page("/Index")" method="get">
                        <div class="input-group">
                            <input type="text"
                                   name="q"
                                   value="@ViewData["SearchQuery"]"
                                   class="form-control"
                                   autoComplete="off"
                                   placeholder="@Localizer["SearchPackagesPlaceholder"]" />

                            <span class="input-group-btn">
                                <button type="submit"
                                        class="btn btn-default"
                                        title="@Localizer["SearchForPackages"]">
                                    <span class="ms-Icon ms-Icon--Search" aria-hidden="true"></span>
                                </button>
                            </span>
                        </div>

                        @await RenderSectionAsync("SearchForm", required: false)
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container main-container">
        @RenderBody()
    </main>

    <footer class="footer">
        <p>
            @Localizer["VersionLabel"]: @Version.Version
        </p>
        @Html.AddReleaseInformationAsComment()
    </footer>

    <script src="~/_content/BaGetter.Web/lib/alpinejs/dist/alpine.js"></script>

    <script src="~/_content/BaGetter.Web/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/_content/BaGetter.Web/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/_content/BaGetter.Web/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
